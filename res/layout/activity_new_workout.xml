<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NewWorkoutActivity" >

    <Button
        android:id="@+id/custombutton"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/halfdeckbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:onClick="onClick"
        android:text="Custom" />

    <Button
        android:id="@+id/fulldeckbutton"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/halfdeckbutton"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:onClick="onClick"
        android:text="Full Deck" />

    <Button
        android:id="@+id/halfdeckbutton"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/custombutton"
        android:layout_below="@+id/fulldeckbutton"
        android:layout_marginTop="45dp"
        android:onClick="onClick"
        android:text="Half Deck" />

    <Button
        android:id="@+id/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:onClick="onClick"
        android:text="Back" />

</RelativeLayout>
